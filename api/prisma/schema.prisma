// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int                   @id @default(autoincrement())
  createdAt      DateTime              @default(now())
  firstName      String
  lastName       String?
  email          String                @unique
  profilePicture String?
  googleToken    String?
  organisations  UsersInOrganisation[]
}

model Organisation {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String @unique
  acronym String?
  users UsersInOrganisation[]
  pages Page[]
}

model UsersInOrganisation {
  userId         Int
  createdAt      DateTime     @default(now())
  user           User         @relation(fields: [userId], references: [id])
  organisationId Int
  organisation   Organisation @relation(fields: [organisationId], references: [id])

  @@id([userId, organisationId])
}

model Page {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  organisationId Int
  organisation Organisation @relation(fields: [organisationId], references: [id]) 
  sheetId String @unique
  webLink String @unique  
  identificationColumns Column[]
  backgroundColor String @default("#0582CA")
  textFieldBackgroundColor String @default("#0676B6")
  textColor String @default("#FFFFFF")
  buttonColor String @default("#53B2E3")
  headingColor String @default("#FFFFFF")
  logoLink String?
  backgroundImageLink String?
  fontFamily String
}

model Column {
  id Int @id @default(autoincrement())
  sheetsName String
  mappedTo String
  pageId Int
  page Page @relation(fields: [pageId], references: [id])
}



